<form id="url-form">
  <label for="token">Enter Access Token</label>
  <input type="text" id="token" name="token" required>

  <label for="pod_url">Enter Pod URL</label>
  <input type="text" id="pod_url" name="pod_url" required>

  <button type="submit">Fetch</button>
</form>

<div id="result"></div>

<script>
document.getElementById('url-form').addEventListener('submit', async (event) => {
  event.preventDefault();

  // Get the values from the input fields
  const token = document.getElementById('token').value;
  const podUrl = document.getElementById('pod_url').value;

  // Combine the values into a URL
  const urlInput = `abc+${token}&pod_url=${podUrl}`;

  // Log the generated URL to the console (or perform further actions)
  console.log(urlInput);

  // You can also display the generated URL in the result div
  document.getElementById('result').textContent = urlInput;
});
</script>
