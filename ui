import React, { Component } from 'react';

class FetchData extends Component {
  constructor(props) {
    super(props);
    this.state = {
      result: [],  // This will hold the lines of data received from the server
      url: ''
    };
  }

  handleInputChange = (event) => {
    this.setState({ url: event.target.value });
  };

  handleSubmit = async (event) => {
    event.preventDefault();
    
    const { url } = this.state;
    if (!url) {
      alert('URL is required');
      return;
    }

    try {
      const response = await fetch(`http://localhost:3001/fetch?url=${encodeURIComponent(url)}`);
      
      if (!response.ok) {
        throw new Error(`Network response was not ok: ${response.statusText}`);
      }
      
      const data = await response.text();  // Get the data as text from the response
      const lines = data.split('\n');  // Split data into an array of lines
      this.setState({ result: lines });  // Update state with the array of lines
    } catch (error) {
      console.error('Error fetching data:', error);
      this.setState({ result: [`Error fetching data: ${error.message}`] });  // Handle error as a single line
    }
  };

  render() {
    const { result, url } = this.state;

    return (
      <div className="container">
        <h1>Fetch URL Data</h1>
        <form id="url-form" onSubmit={this.handleSubmit}>
          <label htmlFor="url">Enter URL:</label>
          <input
            type="text"
            id="url"
            name="url"
            value={url}
            onChange={this.handleInputChange}
            required
          />
          <button type="submit">Fetch</button>
        </form>
        <div id="result">
          {result.map((line, index) => (
            <p key={index}>{line}</p>  // Render each line in a separate <p> tag
          ))}
        </div>
      </div>
    );
  }
}

export default FetchData;
